    <div class = "wrap">
      <div class = "content">
        <h1 class = "title">{{ title }}</h1>
        <p class = "paragraph">{{ paragraph }}</p> 
        <div class = "contact-info">
          <h1>KontaktinformƒÅcija</h1>
          <div class = "grid">
